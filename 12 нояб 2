def palindrome(s):
    if len(s) < 1:
        return True
    else:
        if s[0] == s[-1]:
            return palindrome(s[1:-1])
        else:
            return False
a = str(input("ВВЕДИТЕ СТРОКУ "))
a = a.replace(' ', '')
if (palindrome(a) == True):
    print("дааа, детка, это палиндром!")
else:
    print("неа, ни разу не палиндром(")
